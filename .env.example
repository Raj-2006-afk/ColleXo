# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development

# Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
# Format: mysql+pymysql://username:password@host:port/database_name

# Windows XAMPP (default)
DATABASE_URL=mysql+pymysql://root:@localhost/collexo_db

# macOS MAMP (usually port 8889)
# DATABASE_URL=mysql+pymysql://root:root@localhost:8889/collexo_db

# Linux LAMP (with custom user)
# DATABASE_URL=mysql+pymysql://collexo_user:your_password@localhost/collexo_db

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# College Information
COLLEGE_NAME=Your College Name

# Email Configuration (Optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@collexo.edu
